<!-- res/layout/activity_profile.xml --><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp" tools:context="com.biofocus.ui.profile.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 &amp; 설정"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/profile_image_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@android:color/darker_gray"
            android:contentDescription="프로필 이미지" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름: User Name"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별: 남"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생일: 1990.01.01"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/month_year_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYYY년 MM월"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- 달력 뷰 Placeholder --><FrameLayout
    android:id="@+id/calendar_container"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#E0E0E0"
    android:layout_marginBottom="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달력 뷰 (Fragment 또는 Custom View)"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
</FrameLayout>

    <!-- 요약 정보 --><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F0F0F0">

    <ProgressBar
        android:id="@+id/summary_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="75"
        android:max="100"/>

    <TextView
        android:id="@+id/summary_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75% 완료"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/total_study_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 공부 시간: 0시간 0분"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/average_concentration_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="집중한 시간: 0시간 0분"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/txt_health_connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Connect 권한 상태: 확인 중..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_health_connect_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="헬스커넥트 권한 설정"
        android:layout_marginTop="24dp"/>


</LinearLayout>

</LinearLayout>