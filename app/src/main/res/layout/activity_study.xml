<!-- res/layout/activity_study.xml --><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp" android:gravity="center_horizontal" tools:context="com.biofocus.ui.study.StudyActivity">

    <ImageView
        android:id="@+id/profile_image_study"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@android:color/darker_gray"
        android:contentDescription="프로필 이미지" />

    <TextView
        android:id="@+id/timer_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="00:00:00"
        android:textSize="72sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/remaining_timer_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="남은 시간: 00:00"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/concentration_gauge"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:progress="70"
        android:max="100" />

    <TextView
        android:id="@+id/concentration_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="70% 집중 상태"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/distraction_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="심박수: 안정"
        android:textSize="16sp" />

    <Button
        android:id="@+id/end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="종료"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textSize="24sp" />

</LinearLayout>